// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  firstName    String?
  lastName     String?
  image        String?
  email        String?  @unique
  auth         String?
  token        String?
  password     String?
  securityHash String?
  verified     Boolean? @default(false)
  createdAt    DateTime @default(now()) @map(name: "created_at")
  updatedAt    DateTime @updatedAt @map(name: "updated_at")
  newsletter   Boolean? @default(false)
  lastLogin    DateTime @map(name: "last_login")

  @@map(name: "users")
}

model News {
  id          String    @id @default(cuid())
  title       String?
  description String?
  content     String?
  url         String?
  image       String?
  author      String?
  slug        String?   @unique
  memberId    String?   @default("MAIN")
  publishedAt DateTime? @map(name: "published_at")
  createdAt   DateTime  @default(now()) @map(name: "created_at")
  updatedAt   DateTime  @updatedAt @map(name: "updated_at")

  @@map(name: "news")
}

model Product {
  id                 String   @id @default(cuid())
  title              String?
  description        String?
  price              Float?
  discountPercentage Float?
  rating             Float?
  stock              Int?
  brand              String?
  category           String?
  thumbnail          String?
  images             String[]
  memberId           String?  @default("MAIN")
  createdAt          DateTime @default(now()) @map(name: "created_at")
  updatedAt          DateTime @updatedAt @map(name: "updated_at")
}

model Category {
  id        String   @id @default(cuid())
  name      String?
  memberId  String?  @default("MAIN")
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")
}

model Post {
  id        String   @id @default(cuid())
  title     String?
  body      String?
  memberId  String?  @default("MAIN")
  tags      String[]
  reactions Int?     @default(0)
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")
}
